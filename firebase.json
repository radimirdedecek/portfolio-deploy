{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/api/**",
        "run": { "serviceId": "portfolio-app", "region": "europe-west1" }
      },
      {
        "regex": "^/static/.*",
        "run": { "serviceId": "portfolio-app", "region": "europe-west1" }
      },
      {
        "source": "/portfolio/**",
        "run": { "serviceId": "portfolio-app", "region": "europe-west1" }
      },
      {
        "source": "/", 
        "destination": "/index.html" 
      }
    ]
  }
}